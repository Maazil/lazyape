<div id="showTask" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                
                <button type="button" class="btn-dark" 
                        v-on:click="editBox()"
                        style="position: relative">
                    <span aria-hidden="true"> Edit </span>
                </button>
                
                <button type="button" class="close"
                        data-dismiss="modal" 
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                
                <form class="container">
                    
                    
                    <div class="row justify-content-center">
                        
                        <div style="width: 20px;">ID:</div>
                        <div id="id"></div> 

                    </div>

                    <br/>
                    
                    <div class="row justify-content-center">
                        <div style="width: 15%;">Title: </div>
                        <input style="width: 50%; height: 30px;" type="text" id="title"/>
                        
                    </div>

                    <br/>

                    <div class="row justify-content-center">
                        <div style="width: 15%;"> Start time: </div>
                        <input style="width: 50%; height: 30px;" 
                               type="datetime-local" class="inputModal" id="start"/>
                    </div>

                    <br/>

                    <div class="row justify-content-center">
                        <div style="width: 15%;" > End Time: </div>
                        <input style="width: 50%; height: 30px;" 
                               type="datetime-local" class="inputModal" id="end"/>
                    </div>
                </form>
                
            </div>
            <div class="modal-footer">
                
                <div class="bLeft mr-auto">
                    <button type="button" class=" btn btn-danger " id="Delete"
                            v-on:click="deleteTask(task.id, index)" data-dismiss="modal"> Delete task </button>
                    
                    <button type="button" class="btn btn-success" id="saveTask" 
                            v-on:click="saveTask()" data-dismiss="modal"> Save changes </button>
                </div>
                
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="addTaskModal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Add Task</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-3">
                    <label>Title</label>
                    <input id="taskTitle" placeholder="Title" v-model="task.title" class="form-control">
                </div>
                <div class="md-form mb-3">
                    <label >Start time</label>
                    <input id="taskStart" placeholder="YYYY-MM-DDTHH:MM" type="datetime-local" v-model="task.start" class="form-control LocalDateTime">
                </div>
                <div class="md-form mb-3">
                    <label>End time</label>
                    <input id="taskEnd" placeholder="YYYY-MM-DDTHH:MM" type="datetime-local" v-model="task.end" class="form-control">
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default" data-dismiss="modal" v-on:click="addTask()">Add task</button>
            </div>
        </div>
    </div>
</div>